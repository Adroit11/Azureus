{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password|slice(0,20) }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.info.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ entity.info.surname }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ entity.info.bio }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entity.info.country }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
